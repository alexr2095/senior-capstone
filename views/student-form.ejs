<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <title>Student Submission</title>
    <script>
        var majorJS = [];
        document.write("<% major.forEach((major)=>{ %>");
        majorJS.push('{' + '"id":<%= major.id%>, "major": <%= major.major%>, "college": <%= major.college%>' + "}");
        document.write("<% }) %>");


    </script>
    <script src="https://code.jquery.com/jquery-3.4.1.js"
        integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU=" crossorigin="anonymous"></script>
    <script src="/js/abstractCharCounter.js"></script>
    <script src="/js/additionalPresenters.js"></script>

</head>


<div id="nav-placeholder"></div>
<script>
    $(function () {
        $("#nav-placeholder").load("/navbar");
    });
</script>

<body>
    <!-- Container -->
    <div class="container p-4">
        <h2>Student Submission</h2>
        <form action="/student-form" method="POST">
            <div class="form-group row mt-4 col-md-12">
                <h4>Research Project</h4>
            </div>
            <div class="row">
                <div class="form-group col-md-8">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" id="title" name="title" required="true">
                </div>
                <div class="form-group col-md-4">
                    <label for="projectArea">Subject Area</label>
                    <input type="text" class="form-control" id="projectArea" name="projectArea" required="true">
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-12">
                    <label for="abstract">Abstract</label>
                    <textarea class="form-control" id="abstract" name="abstract" rows=8 required="true"
                        maxlength="750"></textarea>
                    <small class="text-muted" id="abstractCharRemaining"></small>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-3">
                    <label for="advisor">Faculty Advisor</label>
                    <select id="advisor" name="advisor" class="form-control" required="true">
                        <option></option>
                        <% faculty.forEach((faculty)=>{ %>
                        <option value='<%= faculty.id %>'><%= faculty.facultyName %></option>
                        <% }) %>
                    </select>
                </div>
                <div class="form-group col-md-3">
                    <label for="researchCampus">Campus Conducted</label>
                    <select id="researchCampus" name="researchCampus" class="form-control" required="true">
                        <option></option>
                        <option value="Union, NJ">Union (Main)</option>
                    </select>
                </div>
                <div class="form-group col-md-3">
                    <label for="presentationType">Presentation Type</label>
                    <select id="presentationType" name="presentationType" class="form-control" required="true">
                        <option></option>
                        <option value="Poster Presentation">Poster Presentation</option>
                        <option value="Oral Presentation">Oral Presentation</option>
                        <option value="Exhibit/Creative Wor">Exhibit/Creative Work</option>
                    </select>
                </div>
                <div class="form-group col-md-3">
                    <label for="fundedBy">Funded By</label>
                    <select id="fundedBy" name="fundedBy" class="form-control" required="true">
                        <option value="None">None</option>
                        <option value="McNair">McNair Scholars Program</option>
                        <option value="LSAMP">Louis Stokes Alliances for Minority Participation (LSAMP)</option>
                        <option value="SpF">Students Partnering with Faculty (SpF)</option>
                        <option value="FFRA">Foundation Faculty Research Awards (FFRA)</option>
                    </select>
                </div>
            </div>
            <hr>
            <div class="form-group row mt-4 col-md-12">
                <h4>Primary Presenter (You)</h4>
            </div>
            <div class="row">
                <div class="form-group col-md-3">
                    <label for="firstName">First name</label>
                    <input type="text" class="form-control" id="firstName" name="firstName" required="true" readonly
                        placeholder="<%= fname%>" value="<%= fname%>">
                </div>
                <div class="form-group col-md-3">
                    <label for="lastName">Last name</label>
                    <input type="text" class="form-control" id="lastName" name="lastName" required="true" readonly
                        placeholder="<%= lname%>" value="<%= lname%>">
                </div>
                <div class="form-group col-md-2">
                    <label for="keanID">Student ID</label>
                    <input type="number" class="form-control" id="keanID" name="keanID" min="0" max="9999999"
                        required="true">
                </div>
                <div class="form-group col-md-4 ">
                    <label for="keanEmail">Email Address</label>
                    <div class="input-group">
                        <input type="text" class="form-control" id="keanEmail" name="keanEmail" required="true" readonly
                            placeholder="<%= email%>" value="<%= email%>">
                        <div class="input-group-append">
                            <span class="input-group-text" id="keanEmail">@kean.edu</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label for="major">Major</label>
                    <select id="major" name="major" class="form-control" required="true">
                        <option></option>
                        <% major.forEach((major)=>{ %>
                        <option value='<%= major.id%>'><%= major.major%></option>
                        <% }) %>
                    </select>
                </div>
                <div class="form-group col-md-3">
                    <label for="class">Class Level</label>
                    <select id="class" name="class" class="form-control" required="true">
                        <option></option>
                        <option value="Freshman">Freshman</option>
                        <option value="Sophomore">Sophomore</option>
                        <option value="Junior">Junior</option>
                        <option value="Senior">Senior</option>
                        <option value="Graduate">Graduate</option>
                    </select>
                </div>
                <div class="form-group col-md-3">
                    <label for="campus">Campus</label>
                    <select id="campus" name="campus" class="form-control" required="true">
                        <option></option>
                        <option value="Union" selected>Union (Main)</option>
                        <option value="Wenzhou">Wenzhou (China)</option>
                        <option value="Ocean">Ocean (Toms River)</option>
                        <option value="Skylands">Skylands (Oak Ridge)</option>
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="form-group col">
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="onCampus" name="onCampus">
                        <label class="form-check-label" for="onCampus">I will be on campus during the Spring
                            semester.</label>
                    </div>
                </div>
            </div>
            <hr>
            <input type="number" id="coPresenterCount" name="coPresenterCount" style="display: none;"
                value="{%coCount%}">
            <div class="form-group row mt-4 col-md-12">
                <h4>Co-Presenters</h4><br>
            </div>
            <div id="dynamicInput"></div>

            <div class="btn-group mt-2 mr-2">
                <button type="button" onclick="additionalPresenter('dynamicInput')" class="btn btn-info">Add a
                    Co-Presenter</button>
            </div>
            <div class="btn-group mt-2">
                <button hidden type='button' id='delete' onclick='deleteAdditionalPresenter()'
                    class='btn btn-info'>Delete a
                    Co-Presenter</button>
            </div>
            <hr>
            <div class="row mb-2">
                <div class="form-group col">
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="waiver" name="waiver" required="true">
                        <label class="form-check-label" for="waiver">I hereby grant Kean University the
                            permission to display a digital copy of my poster on the Research Days Website
                            and in the Kean Quest online journal.
                        </label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-12">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </form>
    </div>
</body>

</html>