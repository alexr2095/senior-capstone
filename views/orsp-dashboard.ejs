<!DOCTYPE html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="/css/style.css">
    <!-- test if needed -->
    <!-- <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>  -->
    <script src="https://code.jquery.com/jquery-3.4.1.js"
        integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU=" crossorigin="anonymous"></script>
    <script src="/js/launchModalFaculty.js"></script>
    <script defer src="/js/orspSearch.js"></script>
</head>

<div id="nav-placeholder"></div>
<script>
    $(function () {
        $("#nav-placeholder").load("/navbar");
    });
</script>

    <div class="container">
        <h1>ORSP Dashboard</h1>
        <input class="form-control mb-4" id="tableSearch" type="text" placeholder="Search..">
        <div class="table-responsive mt-4">
            <table class="table table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Status</th>
                        <th scope="col">#</th>
                        <th scope="col">Title</th>
                        <th scope="col">Primary Presenter</th>
                        <th scope="col">Date Submitted</th>
                    </tr>
                </thead>

                <tbody id="studentProjects">
                    <% for(var element in projects){%>
                    <tr>
                        <td>
                            <% if(projects[element].status == 'Pending ORSP'){%>
                            <span class="badge badge-info"><%= projects[element].status%></span>
                            <%}else if (projects[element].status == 'Approved'){%>
                            <span class="badge badge-success"><%= projects[element].status%></span>
                            <%}else if (projects[element].status == 'Denied'){%>
                            <span class="badge badge-danger"><%= projects[element].status%></span>
                            <%}else if (projects[element].status == 'Pending Faculty'){%>
                            <span class="badge badge-info"><%= projects[element].status%></span>
                            <%}else if (projects[element].status == 'Pending PPT'){%>
                            <span class="badge badge-warning"><%= projects[element].status%></span>
                            <%}else{%>
                            <span class="badge badge-warning">Error: Please contact ORSP</span>
                            <%}%>
                        </td>

                        <td><%= projects[element]._id %></td>
                        <td>
                            <button
                                onclick="launchStudentModal('<%= projects[element].status%>','<%= projects[element].title%>','<%= projects[element].id %>','<%= projects[element].abstractSubmitted%>','<%= projects[element].submitterName%>','<%= projects[element].coPresenter%>','<%= projects[element].facultyAdvisorName%>','<%= projects[element].dateLastModified%>')"
                                class="btn btn-link text-left" data-toggle="modal" data-target="#myStudentModal">
                                <%= projects[element].title %>
                            </button>
                        </td>
                        <td><%= projects[element].submitterName %></td>
                        <td><%= projects[element].dateSubmitted %></td>
                    </tr>
                    <%}%>
                </tbody>

            </table>
        </div>
    </div>

<!-- Student Modal -->
<div id="myStudentModal" class="modal" tabindex="-1" role="dialog">
<div class="modal-dialog modal-dialog-centered modal-xl" role="document">
    <div class="modal-content">
        <div class="container">
            <div class="modal-header">
                <div class="row">
                    <div class="col-10">
                        <h3 id="studentTitle"></h3>
                    </div>
                    <div class="col">
                        <span class="badge badge-info" id="studentSubmissionID"></span>
                    </div>
                </div>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>


            <div class="modal-body">
                <div class="row">
                    <div class="col-8 mr-auto">
                        <h5>Abstract</h5>
                        <p class="my-textbox" id="studentAbstractLaunchModal" contenteditable="false">
                        </p>
                    </div>
                    <div class="col-3">
                        <h5>Primary Presenter</h5>
                        <p id="studentPrimary"></p>
                        <h5 class="mt-4">Additional Presenters</h5>
                        <p id="studentCoPres"></p>
                        <h5 class="mt-4">Faculty</h5>
                        <p id="studentFaculty"></p>
                    </div>

                    <div id="IPO" class="input-group input-file m-3">
                        <form action="/file-upload" method="post" enctype="multipart/form-data">
                            <div class="custom-file">
                                <input type="file" accept=".ppt,.pptx" id="customFile"
                                    name="filename" required>
                                 <!-- <label class="custom-file-label" for="customFile">Choose file (.ppt,.pptx only)</label> -->
                                <span class="input-group-btn">
                                    <input class="btn btn-default btn-choose btn-primary"
                                        type="submit" value="Submit" />
                                </span>
                            </div>
                            <input type="text" value="" name="fileID" id="fileID"
                                style="display: none;">
                        </form>
                    </div>
                </div>
                <div class="modal-footer">
                    <p class="mr-auto small text-muted" id="studentLastEdit"></p>
                    <span id="edit"></span>
                    <span id="approve"></span>
                    <button type="button" class="btn btn-secondary"
                        data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>

</html>
